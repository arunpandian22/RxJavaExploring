<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlHeader"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ab_height"
    android:layout_alignParentTop="true">

    <ImageView
        android:id="@+id/ivHome"
        style="@style/ab_icon_style"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_arrow_back"
        android:padding="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/tvActionbarTitle"
        style="@style/ab_text_style"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_name" />

    <RelativeLayout
        android:id="@+id/llOverflow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvOverflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/items_inbetween_large"
            android:layout_marginRight="@dimen/items_inbetween_large"
            android:padding="@dimen/items_inbetween_small"
            android:textColor="@color/colorAccent"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/tvOverflowCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvOverflow"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:background="@drawable/cb_overflowcount_bg"
            android:textColor="@color/overFlowCountTextColor"
            android:padding="@dimen/items_inbetween_xsmall"
            android:text=""
            android:gravity="center"
            android:visibility="gone"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>